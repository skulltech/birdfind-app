{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": false,
    "allowJs": true,
    "incremental": true,
    "paths": {
      "@twips/lib": ["../lib/src"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "environment.d.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../lib"
    }
  ]
}
